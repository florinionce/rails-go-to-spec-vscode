{
  "name": "rails-go-to-spec-2",
  "displayName": "Rails Go to Spec 2",
  "description": "Switch between code and spec in Rails",
  "version": "1.3.0",
  "publisher": "sporto2",
  "repository": "https://github.com/sporto/rails-go-to-spec-vscode",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rails-go-to-spec-2.railsGoToSpec"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rails-go-to-spec-2.railsGoToSpec",
        "title": "Rails Go to Spec"
      }
    ],
    "keybindings": [
      {
        "command": "rails-go-to-spec-2.railsGoToSpec",
        "key": "ctrl+shift+y",
        "mac": "cmd+shift+y",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == ruby",
          "command": "rails-go-to-spec-2.railsGoToSpec",
          "group": "railsgotospec"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Rails Go to Spec",
      "properties": {
        "railsGoToSpec.useRequestSpecs": { "type": "boolean", "default": false }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "mkdirp": "^2.1.3"
  }
}
